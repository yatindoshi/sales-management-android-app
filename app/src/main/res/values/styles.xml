<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========================= -->
    <!-- SCREEN TITLES -->
    <!-- ========================= -->
    <style name="ScreenTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <!-- ========================= -->
    <!-- SECTION TITLES -->
    <!-- ========================= -->
    <style name="SectionTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#37474F</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- ========================= -->
    <!-- INPUT FIELDS -->
    <!-- ========================= -->
    <style name="AppInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:drawable/edit_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ========================= -->
    <!-- DROPDOWN / AUTOCOMPLETE -->
    <!-- ========================= -->
    <style name="AppDropdown" parent="AppInput">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:inputType">none</item>
    </style>

    <!-- ========================= -->
    <!-- PRIMARY BUTTON -->
    <!-- ========================= -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ========================= -->
    <!-- SECONDARY BUTTON -->
    <!-- ========================= -->
    <style name="SecondaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">#B0BEC5</item>
    </style>

    <!-- ========================= -->
    <!-- TABLE LABEL -->
    <!-- ========================= -->
    <style name="TableLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#37474F</item>
    </style>

    <!-- ========================= -->
    <!-- TABLE VALUE -->
    <!-- ========================= -->
    <style name="TableValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- ========================= -->
    <!-- LIST HEADER -->
    <!-- ========================= -->
    <style name="ListHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#455A64</item>
    </style>

    <!-- ========================= -->
    <!-- LIST ITEM -->
    <!-- ========================= -->
    <style name="ListItemText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#212121</item>
    </style>

</resources>
